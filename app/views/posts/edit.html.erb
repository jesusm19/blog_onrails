<%-# Vista edición de posts  -%>
<h1>Editar Artículo</h1>

<%= form_for :post, :url => { :action => :update, :id => @post.id },:method => :put do |f| %>
  <% if @post.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@post.errors.count, "error") %> No se guardo el post:</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %>
  </p>

  <p>
    <%= f.label :texto %><br>
    <%= f.text_area :texto %>
  </p>

  <p>
    <%= f.submit :'Actualizar artículo' %>
  </p>
<% end %>

<%= link_to 'Volver', :action => :index %>